  <div style="text-align:center; margin: 2rem 0;">
    <a href="/home" class="back-home-btn">
      ‚ö° Volver a la p√°gina principal
    </a>
  </div>

  <!-- Scripts del dashboard interactivo -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Datos de ejemplo, reemplaza por los datos reales de tu an√°lisis
    const comarcas = ['Barcelona', 'Vall√®s Occ.', 'Terra Alta', 'Alt Empord√†', 'Baix Llobregat'];
    const potenciaInstalada = [200, 150, 400, 350, 100]; // MW
    const consumoReal = [350, 300, 100, 120, 250]; // MW

    // Gr√°fico de barras
    new Chart(document.getElementById('barChart'), {
      type: 'bar',
      data: {
        labels: comarcas,
        datasets: [
          {
            label: 'Potencia instalada (MW)',
            data: potenciaInstalada,
            backgroundColor: 'rgba(0, 123, 255, 0.7)'
          },
          {
            label: 'Consumo real (MW)',
            data: consumoReal,
            backgroundColor: 'rgba(40, 167, 69, 0.7)'
          }
        ]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { position: 'top' },
          title: { display: false }
        },
        scales: {
          y: { beginAtZero: true }
        }
      }
    });

    // Datos de ejemplo para el gr√°fico de sectores
    const autosuficientes = 2;
    const deficitarias = 2;
    const excedentarias = 1;

    new Chart(document.getElementById('pieChart'), {
      type: 'doughnut',
      data: {
        labels: ['Autosuficientes', 'Deficitarias', 'Excedentarias'],
        datasets: [{
          data: [autosuficientes, deficitarias, excedentarias],
          backgroundColor: [
            'rgba(40, 167, 69, 0.7)',
            'rgba(220, 53, 69, 0.7)',
            'rgba(255, 193, 7, 0.7)'
          ]
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { position: 'bottom' }
        }
      }
    });
  </script>

  <%- include('partials/footer', { footerText: footerText }) %>
